{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/es2015",
    "target": "ES2020",
    "module": "ES2015",
    "incremental": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "removeComments": false,

    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
